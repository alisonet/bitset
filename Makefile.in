.PHONY: all clean test stress install install-headers uninstall

CFLAGS=@CFLAGS@
VERSION=@VERSION@
VERSION_MAJOR=@VERSION_MAJOR@
PREFIX=@PREFIX@
LIBRARY=@LIBRARY@
HEADERS=@HEADERS@
PKGCONFIG_DATA=@LIBRARY@/pkgconfig
TAG=$(shell git describe --abbrev=0 --tags)
PACKAGE="bitset-$(TAG)"

B_CC=@printf ' CC: %b\n' $@ 1>&2; $(CC)

all:
	@$(MAKE) -C lib all || exit

test: all
	@$(MAKE) -C test test || exit

stress: all
	@$(MAKE) -C test stress || exit

install-headers:
	@mkdir -p $(HEADERS)/bitset || exit
	@cp -r include/bitset/* $(HEADERS)/bitset/ || exit
	@echo " INSTALL: $(HEADERS)/bitset"
	@chmod 644 $(HEADERS)/bitset/* || exit

install: all install-headers
	@mkdir -p $(LIBRARY) || exit
	@cp lib/libbitset.a $(LIBRARY)/libbitset.a || exit
	@chmod 644 $(LIBRARY)/libbitset.a || exit
	@echo " INSTALL: $(LIBRARY)/libbitset.a"
	@cp -P lib/libbitset.so* $(LIBRARY)/ || exit
	@echo " INSTALL: $(LIBRARY)/libbitset.so"
	#@strip $(LIBRARY)/libbitset.so.$(VERSION) || exit
	#@echo " STRIP: $(LIBRARY)/libbitset.so.$(VERSION)"
	@mkdir -p $(PKGCONFIG_DATA) || exit
	@chmod 755 $(PKGCONFIG_DATA)
	@cp build/bitset.pc $(PKGCONFIG_DATA)/bitset.pc || exit
	@echo " INSTALL: $(PKGCONFIG_DATA)/bitset.pc"

uninstall:
	@rm -f $(LIBRARY)/libbitset.so*
	@rm -f $(LIBRARY)/libbitset.a
	@rm -rf $(HEADERS)/bitset
	@rm -f $(PKGCONFIG_DATA)/bitset.pc
	@echo "bitset uninstalled"

dist:
	@git archive --prefix="$(PACKAGE)/" ${TAG} -o $(PACKAGE).tar
	@mkdir -p $(PACKAGE)
	@build/changelog.sh > $(PACKAGE)/CHANGES.md
	@tar -rf $(PACKAGE).tar $(PACKAGE)/CHANGES.md
	@bzip2 -f $(PACKAGE).tar
	@rm -rf $(PACKAGE)
	@echo "Created $(PACKAGE).tar.bz2"


clean:
	@$(MAKE) -C lib clean
	@$(MAKE) -C test clean
